@page
@model Matriculas.App.WebApp.Pages.Administrativo.GestionDeMatriculas.CreateModel
@{
}
<h1 class="h3 mb-2 text-gray-800">Modulo de administracion de matriculas - Crear</h1>
<div>
    <form method="post">
        <div asp-validation-summary="All" class="text-danger">
        </div>
 @*       <input type="hidden" asp-for="Model.IdMateria" />*@
        <div class="mb-3">
            <label class="form-label">Seleccione el estudiante</label>
            @if (Model.Estudiantes.Count() > 0)
            {
                <select class="form-control" name="estudiante" id="estudiante">
                    @foreach (var item in Model.Estudiantes)
                    {
                        <option value="@item.IdEstudiante" id="select-@item.IdEstudiante">@item.Nombre @item.Apellido </option>
                    }
                </select>
            }
            else
            {
                <p> No existen estudiantes en la db </p>
            }
        </div>

        <div class="mb-3">
            <label class="form-label">Seleccione el año</label>
            @if (Model.Years.Count() > 0)
            {
                <select class="form-control" name="year" id="year">
                    @foreach (var item in Model.Years)
                    {
                        <option value="@item.IdYear" id="select-@item.IdYear">@item.NombreYear </option>
                    }
                </select>
            }
            else
            {
                <p> No existen años en la db </p>
            }
        </div>

        <div class="mb-3">
            <label class="form-label">Seleccione el grado a matricular</label>
            @if (Model.Grados.Count() > 0)
            {
                <select class="form-control" name="grado" id="grado">
                    @foreach (var item in Model.Grados)
                    {
                        <option value="@item.IdGrado" id="select-@item.IdGrado">@item.NombreGrado </option>
                    }
                </select>
            }
            else
            {
                <p> No existen grados en la db </p>
            }
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-12 text-right">
                    <a class="btn btn-primary btn-icon-split" href='index'>
                        <span class="text">Atras</span>
                    </a>
                    <button type="submit" class="btn btn-success ml-2">Save</button>
                </div>
            </div>
            <br />
            <br />
        </div>
    </form>
</div>