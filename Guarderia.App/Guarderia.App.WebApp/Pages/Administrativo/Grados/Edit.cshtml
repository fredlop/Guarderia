@page
@model Matriculas.App.WebApp.Pages.Administrativo.Grados.EditModel
@{
    
}
<h1 class="h3 mb-2 text-gray-800">Modulo de Administracion de grados - Editar</h1>
<div>
    <form method="post">
        <div asp-validation-summary="All" class="text-danger">
        </div>
        <input type="hidden" asp-for="Model.IdGrado" />
        <div class="mb-3">
            <label class="form-label" asp-for="Model.NombreGrado">Nombre</label>
            <input type="text" asp-for="Model.NombreGrado" class="form-control" />
            <span asp-validation-for="Model.NombreGrado" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 text-right">
                        <a class="btn btn-primary btn-icon-split" href='javascript:history.go(-1)'>
                            <span class="text">Atras</span>
                        </a>
                        <button type="submit" class="btn btn-success ml-2">Save</button>
                    </div>
                </div>
                <br />
                <br />
            </div>

        </div>
    </form>
</div>