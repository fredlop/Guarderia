@page
@model Matriculas.App.WebApp.Pages.Administrativo.Usuarios.EditarEstudianteModel
@{
}
<h1>Editar Estudiante </h1>


<div class="row">
    <div class="col-lg-8">
        <div class="card mb-4">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger">
                </div>
                <input type="hidden" asp-for="@Model.dataEstudiante.IdEstudiante" />
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Nombre</label>
                        <input type="text" asp-for="@Model.dataEstudiante.Nombre" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Apellido</label>
                        <input type="text" asp-for="@Model.dataEstudiante.Apellido" class="form-control" />
                    </div>


                    <div class="mb-3">
                        <label class="form-label">Seleccione el Tipo de identificacion</label>
                        @if (Model.TiposDeIdentificacion.Count() > 0)
                        {
                            <select class="form-control" name="tipoid" id="tipoid" asp-for="@Model.dataEstudiante.IdTipoIdeIdentificacion">
                                @foreach (var item in Model.TiposDeIdentificacion)
                                {
                                    <option value="@item.IdIdentificacion" id="select-@item.IdIdentificacion">@Html.DisplayFor(m=> item.NombreIdentificacion)</option>
                                }
                            </select>
                        }
                        else
                        {
                            <p> No existen tipos de identificacion en la db </p>
                        }
                    </div>


                    <div class="mb-3">
                        <label class="form-label">Numero de Identificacio</label>
                        <input type="text" asp-for="@Model.dataEstudiante.NumeroDeIdentificacion" class="form-control" />
                    </div>



                    <div class="mb-3">
                        <label class="form-label">Seleccione el Genero</label>
                        @if (Model.Generos.Count() > 0)
                        {
                            <select class="form-control" name="genero" id="genero" asp-for="@Model.dataEstudiante.IdGenero">
                                @foreach (var item in Model.Generos)
                                {
                                    <option value="@item.IdGenero" id="select-@item.IdGenero">@Html.DisplayFor(m=> item.NombreGenero)</option>
                                }
                            </select>
                        }
                        else
                        {
                            <p> No existen roles en la db </p>
                        }
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="text" value="@Model.Email" class="form-control" disabled />
                    </div>

                    <div class="mb-3">
                        <label class="form-label" asp-for="@Model.dataEstudiante.Codigo">Codigo</label>
                        <input type="text" asp-for="@Model.dataEstudiante.Codigo" class="form-control" />
                        <span asp-validation-for="@Model.dataEstudiante.Codigo" class="text-danger"></span>
                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-md-12 text-right">
                            <a class="btn btn-primary btn-icon-split" href='javascript:history.go(-1)'>
                                <span class="text">Atras</span>
                            </a>
                            <button type="submit" class="btn btn-success ml-2">Save</button>
                        </div>
                    </div>
                    <br />
                    <br />
                </div>
            </form>
        </div>
    </div>
</div>